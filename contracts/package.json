{
  "name": "@t1protocol/t1-contracts",
  "description": "Solidity code for T1's L1 bridge and rollup contracts, plus L2 bridge and pre-deployed contracts.",
  "version": "1.0.0",
  "author": {
    "name": "t1 Labs",
    "url": "https://github.com/t1protocol"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^v4.9.3",
    "@openzeppelin/contracts-upgradeable": "^v4.9.3",
    "aave": "github:aave/aave-v3-core#v1.19.4"
  },
  "devDependencies": {
    "ds-test": "github:dapphub/ds-test",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "solmate": "^6.8.0"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "foundry",
    "smart-contracts",
    "solidity",
    "rollup",
    "rtp",
    "zkp",
    "tee"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out artifacts coverage lcov.info",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint \"{script,src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage --no-match-coverage '(script|test|mocks|ZkEvmVerifierV1)'",
    "test:coverage:report": "forge coverage --no-match-coverage '(script|test|mocks|ZkEvmVerifierV1)' --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage --ignore-errors inconsistent",
    "prepare": "husky"
  }
}
